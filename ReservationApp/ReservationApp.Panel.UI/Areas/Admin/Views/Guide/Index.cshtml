@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<style>
    img{
        border-radius:50%;
    }
</style>
<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
     </tr
     @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" style="width:50px;height:50px;"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>

                @{
                    if (item.Status == true)
                    {
                        <td><a href="/Admin/Guide/ChangeToFalse/" class="btn btn-outline-warning">Pasif yap</a></td>
                    }
                    else
                    {
                        <td><a href="/Admin/Guide/ChangeToTrue/" class="btn btn-outline-info">Aktif yap</a></td>
                    }
                }


            <td><a href="/Admin/Guide/EditGuide/" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni rehber oluştur</a>
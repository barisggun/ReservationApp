@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
     </tr
     @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideID</td>
            <td><img src="@item.Image"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>

<a href="#" class="btn btn-outline-primary">Yeni rehber oluştur</a>